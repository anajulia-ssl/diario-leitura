<?xml version="1.0" encoding="UTF-8" ?>

<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://java.sun.com/xml/ns/persistence"
             version="3.1"
>
    <persistence-unit name="diario-leitura">

        <class>br.com.projetos.diarioleitura.model.Usuario</class>
        <class>br.com.projetos.diarioleitura.model.Livro</class>
        <class>br.com.projetos.diarioleitura.model.Avaliacao</class>

        <properties>
            <property name="jakarta.persistence.jdbc.driver" value="org.h2.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:h2:mem:testdb"/>
            <property name="jakarta.persistence.jdbc.user" value="sa"/>
            <property name="jakarta.persistence.jdbc.password" value=""/>

            <property name="hibernate.dialect" value="org.hibernate.dialect.H2Dialect"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.hbm2ddl.show_sql" value="true"/>
            <property name="hibernate.hbm2ddl.format_sql" value="true"/>
        </properties>
    </persistence-unit>

</persistence>